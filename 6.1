function [v]=vecDob(v1,v2)
    vd1 = det([v1[2] v1[3]; v2[2] v2[3]]);
    vd2 = det([v1[1] v1[3]; v2[1] v2[3]]);
    vd3 = det([v1[1] v1[2]; v2[1] v2[2]]);
    v = [vd1 vd2 vd3]
endfunction

function sq=ABCsquare(v1,v2)
    sq = abs(vecDob(v1,v2))/2;
endfunction

